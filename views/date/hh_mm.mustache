<div class="date hours">
	<div>
		<div class="text-center col-md-5">
			<strong>Horas</strong>
		</div>
		<div class="col-md-1">
		</div>
		<div class="text-center col-md-5">
			<strong>Minutos</strong>
		</div>
	</div>
	<div>
		<div class="action next-hour text-center col-md-5">
			<i class="fa fa-chevron-up"></i>
		</div>
		<div class="col-md-1">
		</div>
		<div class="action next-minute text-center col-md-5">
			<i class="fa fa-chevron-up"></i>
		</div>
	</div>
	<div>
		<div class="col-md-5">
			<input type="text" class="form-control hour text-center" maxlength="2" placeholder="00" value="{{hour}}">
		</div>
		<div class="text-center col-md-1">
			<strong>
				:
			</strong>
		</div>
		<div class="col-md-5">
			<input type="text" class="form-control minutes text-center" maxlength="2" placeholder="00" value="{{minutes}}">
		</div>
	</div>
	<div>
		<div class="action prev-hour text-center col-md-5">
			<i class="fa fa-chevron-down"></i>
		</div>
		<div class="col-md-1">
		</div>
		<div class="action prev-minute text-center col-md-5">
			<i class="fa fa-chevron-down"></i>
		</div>
	</div>
</div>